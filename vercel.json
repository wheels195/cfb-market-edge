{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/sync-events",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/poll-odds",
      "schedule": "*/10 * * * 4,5,6"
    },
    {
      "path": "/api/cron/run-model",
      "schedule": "0 8 * * 4,5,6"
    },
    {
      "path": "/api/cron/materialize-edges",
      "schedule": "0 */2 * * 4,5,6"
    },
    {
      "path": "/api/cron/sync-results",
      "schedule": "0 6 * * 0"
    },
    {
      "path": "/api/cron/set-closing-lines",
      "schedule": "0 4 * * 0"
    },
    {
      "path": "/api/cron/grade-bets",
      "schedule": "0 7 * * 0"
    }
  ]
}
